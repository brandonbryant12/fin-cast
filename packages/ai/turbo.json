{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      // $TURBO_DEFAULT$ includes src/** and tsconfig.json, which is correct for tsc
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      // Ensure eslint config files are included if not covered by TURBO_DEFAULT
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.js", "tsconfig.json"]
    },
    "format": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "src/**/*.test.tsx", "tsconfig.json", "vitest.config.ts"]
    }
  }
} 