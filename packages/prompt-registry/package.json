{
  "name": "@repo/prompt-registry",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "bin": {
    "prompt-registry-cli": "./src/cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "cli": "tsx ./src/cli.ts"
  },
  "types": "./src/index.ts",
  "dependencies": {
    "@repo/db": "workspace:*",
    "@repo/llm": "workspace:*",
    "@repo/errors": "workspace:*",
    "drizzle-orm": "catalog:",
    "ai": "catalog:",
    "handlebars": "^4.7.8",
    "valibot": "catalog:",
    "commander": "catalog:",
    "dotenv": "catalog:",
    "tsx": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}