{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "lint": {
      "dependsOn": [],
      "outputs": [".cache/.eslintcache"] // Keep lint cache
    },
    "typecheck": {
      "dependsOn": [],
      "outputs": [".cache/tsbuildinfo.json"] // Keep typecheck cache
    },
    "clean": {
      "cache": false
    },
    "cli": { // Task for running the CLI via turbo
        "cache": false,
        "persistent": true // Or false depending if it's long-running
    }
  }
} 