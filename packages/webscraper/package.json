{
  "name": "@repo/webscraper",
  "version": "0.1.0",
  "private": true,
  "description": "A package for fetching web page content with proxy support.",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "bin": {
    "scrape-cli": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./scraper": {
      "types": "./src/scraper.ts",
      "default": "./src/scraper.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "auth:schema:generate": "pnpx @better-auth/cli generate --config ./src/cli-config.ts --output ../db/src/schemas/auth.ts",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "cli": "tsx ./src/cli.ts"
  },
  "dependencies": {
    "@repo/logger": "workspace:*",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}