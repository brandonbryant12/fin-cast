{
  "name": "@repo/podcast",
  "version": "0.1.0",
  "private": true,
  "description": "A package for creating podcasts",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "bin": {
    "podcast-cli": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "auth:schema:generate": "pnpx @better-auth/cli generate --config ./src/cli-config.ts --output ../db/src/schemas/auth.ts",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "cli": "tsx ./src/cli.ts"
  },
  "dependencies": {
    "@repo/tts": "workspace:*",
    "@repo/llm": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/audio": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/webscraper": "workspace:*",
    "@repo/prompt-registry": "workspace:*",
    "@trpc/server": "catalog:",
    "fluent-ffmpeg": "catalog:",
    "p-limit": "^6.2.0",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/fluent-ffmpeg": "catalog:",
    "@types/node": "catalog:",
    "@types/play-sound": "catalog:",
    "commander": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}